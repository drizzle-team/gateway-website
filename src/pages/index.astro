---
import '@/styles/global.css';

import { BuiltByDrizzleTeam } from '@/ui/components/build-by-drizzle-team';
import Layout from '../ui/Layout.astro';
import Main from '@/content/landing/main.mdx';
---

<Layout title="Drizzle Gateway">
  <div class="wrap">
    <div class="landing__wrap">
      <div class="landing__title-wrap">
        <div>
          <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24">
            <path
              fill="currentColor"
              d="M8.422 20.618C10.178 21.54 11.056 22 12 22V12L2.638 7.073a3.196 3.196 0 0 0-.04.067C2 8.154 2 9.417 2 11.942v.117c0 2.524 0 3.787.597 4.801c.598 1.015 1.674 1.58 3.825 2.709z"
              data-astro-cid-wx2hukk6=""></path>
            <path
              fill="currentColor"
              d="m17.577 4.432l-2-1.05C13.822 2.461 12.944 2 12 2c-.945 0-1.822.46-3.578 1.382l-2 1.05C4.318 5.536 3.242 6.1 2.638 7.072L12 12l9.362-4.927c-.606-.973-1.68-1.537-3.785-2.641"
              opacity="0.7"
              data-astro-cid-wx2hukk6=""></path>
            <path
              fill="currentColor"
              d="M21.403 7.14a3.153 3.153 0 0 0-.041-.067L12 12v10c.944 0 1.822-.46 3.578-1.382l2-1.05c2.151-1.129 3.227-1.693 3.825-2.708c.597-1.014.597-2.277.597-4.8v-.117c0-2.525 0-3.788-.597-4.802"
              opacity="0.5"
              data-astro-cid-wx2hukk6=""></path>
            <path
              fill="currentColor"
              d="m6.323 4.484l.1-.052l1.493-.784l9.1 5.005l4.025-2.011c.137.155.257.32.362.498c.15.254.262.524.346.825L17.75 9.964V13a.75.75 0 0 1-1.5 0v-2.286l-3.5 1.75v9.44A3.062 3.062 0 0 1 12 22c-.248 0-.493-.032-.75-.096v-9.44l-8.998-4.5c.084-.3.196-.57.346-.824a3.15 3.15 0 0 1 .362-.498l9.04 4.52l3.387-1.693z"
              data-astro-cid-wx2hukk6=""></path>
          </svg>
        </div>
        <div class="landing__title">Drizzle Gateway</div>
      </div>
      <div class="landing__description">Free self-hosted Drizzle Studio on steroids</div>
      <BuiltByDrizzleTeam client:load />
    </div>
    <div class="documentation-container">
      <div class="documentation-content">
        <Main />
      </div>
    </div>
  </div>
  <style is:global>
    html[class~='dark'] .landing__title {
      color: #e2e8f0;
    }
    html[class~='dark'] .landing__description {
      color: #e2e8f0;
    }

    html[class~='dark'] .landing__name-meaning {
      color: #999;
    }

    .wrap {
      width: 100%;
      height: fit-content;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      padding: 100px 0;
    }
    .landing__wrap {
      display: flex;
      width: 100%;
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .landing__title-wrap {
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .landing__title {
      margin-left: 4px;
      font-size: 32px;
      font-weight: 700;
    }

    .landing__description {
      width: 100%;
      font-size: 20px;
      margin-top: 8px;
      font-weight: 600;
    }

    .landing__name-meaning {
      margin-top: 4px;
      font-size: 14px;
      color: #727272;
    }

    html[class~='dark'] .landing__documentation-btn {
      background-color: #e2e8f0;
      color: #282828;
    }

    .landing__documentation-btn {
      margin-top: 80px;
      width: 212px;
      border-radius: 3px;
      color: #ffffff;
      font-size: 16px;
      font-weight: 700;
      line-height: 1;
      height: 48px;
      cursor: pointer;
      display: flex;
      flex-direction: row;
      align-items: center;
      justify-content: center;
      border: none;
      background-color: #282b3b;
      gap: 10px;
    }

    .documentation-container {
      width: 100%;
      margin: 0 auto;
    }

    .documentation-content {
      padding-left: 40px;
      padding-right: 40px;
      width: 100%;
      max-width: 994px;
      margin: 0 auto;
    }

    @media screen and (max-width: 768px) {
      .documentation-content {
        padding-left: 16px;
        padding-right: 16px;
        padding-top: 1rem;
        width: 100%;
      }
    }
  </style>
  <script>
    window.addEventListener('beforeunload', () => {
      localStorage.setItem('sidebar-scroll', '0');
    });
  </script>
</Layout>
